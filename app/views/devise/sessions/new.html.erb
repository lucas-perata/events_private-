<%= turbo_frame_tag "form" do %>
<h2>Log in</h2>

<div class="form">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {"turbo-frame" => "_top"}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>
<%= link_to "Register", new_user_registration_path, data: { turbo_frame: "form" }, class:"nav-link"%>
</div>
<%= render "devise/shared/links" %>
<% end %>