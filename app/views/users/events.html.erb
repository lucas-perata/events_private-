    <%= turbo_frame_tag "events" do %>
    <%= turbo_stream.append  target="events" do %>
  
            <h2>Your events:</h2>
          <div class="row">
          <% if Event.any? %>
            <% @events.each do |e|%>
            <% if e.user_id == current_user.id %>
            
              <div class="col-md-6">
                  <div class="panel shadow p-3 mb-5 bg-white rounded">
                      <div class="panel-body">
                          
                          <div class="bio">
                              <h4 class="red"><%= e.name %></h4>
                              <p><%= render e %></p>
                              <p><%= link_to "Show this event...", e, data:{turbo:false}%></p>
                          </div>
                      </div>
                  </div>
              </div>
                 <% end %>
             <% end %>
                <% end %>
           
              </div>
          </div>
   
    <% end %>
      <% end %>